{
  "form": {
    "version": 0,
    "form.name": "Daily workout",
    "author.name": "carlos bernal"
  },
  "questions": [
    {
      "id": 1,
      "question": "Where you do or want to workout?",
      "answer_tag": "workout#kind",
      "type_user_input": "SELECT",
      "type_details":{
        "options":[
          "home",
          "gym",
          "street",
          "mixed",
          "other"
        ]
      },
      "mode": [
        "sequential",
        "once"
      ],
      "answers_branches": {
        "any": {
          "true": 2,
          "else": -5,
          "taskstory_id": null
        }
      }
    },
    {
      "id": 2,
      "question": "How much duration of workout per day?",
      "answer_tag": "workout#duration",
      "type_user_input": "Duration",
      "type_details":{
        "magnitude": "minutes",
        "max": 180,
        "min": 10
      },
      "mode": [
        "sequential",
        "once"
      ],
      "answers_branches": {
        "any": {
          "true": 3,
          "else": -5,
          "taskstory_id": null
        }
      }
    },
    {
      "id": 3,
      "question": "How many times per week to workout?",
      "answer_tag": "workout#times",
      "type_user_input": "MATRIX",
      "type_details": {
        "cols" : 7,
        "rows" : 3,
        "subtypes": {
          "group_by" : "rows",
          "group_types":{
            "rows" : [
              {
                "type" : "STRING",
                "description": "Day of the week",
                "interpolation_name":"current_day",
                "user_input_autofill" :{
                  "input_data":[
                    "MON", "TUE", "WED, THU", "FRI", "SAT", "SUN"
                  ],
                  "readonly": true
                },
                "missing specification of specificdays like 'mondays' or similar in task fields":""
              },
              {
                "type" : "STRING",
                "description": "Put your description of the workouts!",
                "string_interpolation_fields":{
                  "task_fields":[
                    "name",
                    "description"
                  ],
                  "interpolation_name":"exercise_description"
                }
              },
              {
                "type" : "DURATION",
                "description": "How much time will last this session?",
                "substitute_whole_field": "duration"
              }
            ]
          },
          "wildcard_task_posible_iterations":{
            "day_week" : [0,1,2,3,4,5,6]
          }
        }
      },
      "mode": [
        "sequential"
      ],
      "answers_branches": {
        "any": {
          "true": -1,
          "else": -5,
          "taskstory_id": "normal_flow"
        }
      },
      "taskstories": {
        "normal_flow": [
          {
            "tag": "base_task_collect",
            "name":"Fill bag and collect towel and sport clothes",
            "comment": "",
            "description": "Get all the material needed to perform your activity, Today: {description}",
            "restrictions": [
              "soon"
            ],
            "frequency": "some-days",
            "duration": {
              "minutes": 10
            },
            "wildcard_task": {
              "enabled": true,
              "only_on user_input": true
            }
          },
          {
            "tag": "travel_to_activity",
            "name":"Go to {}",
            "comment": "",
            "when": {
              "after": "base_task_collect"
            },
            "description": "Move to you place of workout",
            "restrictions": [
              "soon"
            ],
            "frequency": "some-days",
            "duration": {
              "minutes": 30
            },
            "wildcard_task": {
              "enabled": true,
              "only_on user_input": true
            }
          },
          {
            "tag": "perform_activity",
            "name":"Workout Time!",
            "comment": "",
            "when": {
              "after": "travel_to_activity",
              "minimum_delay": {
                "minutes": 10
              }
            },
            "description": "Start your workout session!",
            "restrictions": [
              "soon"
            ],
            "frequency": "some-days",
            "duration": {
              "minutes": 10
            },
            "wildcard_task": {
              "enabled": true,
              "this_task_exists_only_if_user_inputs": true
            }
          }
        ]
      }
    }
  ]
}